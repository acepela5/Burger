<h1>Burgers Burgers Burgers!</h1>

<h2>Burgers You Can Order</h2>
<p> no devoured</p>
<ul>
    {{#each burgers}}
    {{#unless devoured}}
      <li>
          {{this.burger_name}}
          <button class="devouredTrue" type="button" data-id="{{this.id}}">EAT IT</button>

      </li>
      {{/unless}}
    {{/each}}
</ul>

<p>devoured</p>

<ul>
    {{#each burgers}}
    {{#if devoured}}
      <li>{{this.burger_name}}</li>

      {{/if}}
    {{/each}}
</ul>



<h2>Add A Burger</h2>

<form class="create-form">
    <div class="form-group">
        <label for="burgerNameInput">Burger Name</label>
        <input type="text" id="burgerNameInput" name="name">
    </div>


    <button id="addburger" type="submit">Add A Burger</button>
</form>
